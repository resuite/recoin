      "google-auth-library": "^10.3.0",
      "hono": "^4.7.11",
      "hotkeys-js": "^3.13.15",
      "jose": "^6.1.0",
      "retend": "https://pkg.pr.new/resuite/retend@0b31177",
      "retend-server": "https://pkg.pr.new/resuite/retend/retend-server@0b31177",
      "retend-utils": "https://pkg.pr.new/resuite/retend/retend-utils@0b31177",
