{
   "name": "recoin",
   "module": "index.ts",
   "type": "module",
   "private": true,
   "workspaces": ["packages/*", "application/*"],
   "scripts": {
      "phone-test": "cd application/phone && bun dev",
      "start-styleguide": "cd application/styleguide && bun dev",
      "build-styleguide": "cd application/styleguide && bun run build",
      "preview-styleguide": "cd application/styleguide && bun run preview",
      "generate-icons": "bun run packages/scripts/generate-icon-names.ts",
      "api-dev": "wrangler dev functions/index.ts",

      "lint": "biome lint",
      "format": "biome format --write ./packages ./application"
   },
   "devDependencies": {
      "@biomejs/biome": "1.9.4",
      "@recoin/api": "file:./packages/api",
      "@recoin/components": "file:./packages/components",
      "@recoin/utilities": "file:./packages/utilities",
      "@tailwindcss/vite": "^4.1.5",
      "@types/node": "^22.15.29",
      "vite": "npm:rolldown-vite@latest",
      "wrangler": "^4.18.0"
   },
   "dependencies": {
      "@hono/zod-validator": "^0.7.0",
      "hono": "^4.7.11",
      "retend": "^0.0.13",
      "retend-server": "^0.0.13",
      "retend-utils": "^0.0.13",
      "zod": "^3.25.46"
   }
}
