{
   "name": "recoin",
   "module": "index.ts",
   "type": "module",
   "private": true,
   "workspaces": ["packages/*", "application/*"],
   "scripts": {
      "phone-test": "cd application/phone && pnpm dev",
      "start-styleguide": "cd application/styleguide && pnpm dev",
      "build-styleguide": "cd application/styleguide && pnpm build",
      "preview-styleguide": "cd application/styleguide && pnpm preview",
      "generate-icons": "bun run packages/scripts/generate-icon-names.js",

      "api-dev": "cd packages/api && pnpm dev",
      "api-build": "cd packages/api && pnpm build",
      "api-deploy": "cd packages/api && wrangler deploy",

      "lint": "biome lint",
      "format": "biome format --write ./packages ./application"
   },
   "devDependencies": {
      "@biomejs/biome": "1.9.4",
      "@cloudflare/vite-plugin": "^1.5.0",
      "@cloudflare/workers-types": "^4.20250607.0",
      "@recoin/api": "file:./packages/api",
      "@recoin/components": "file:./packages/components",
      "@recoin/utilities": "file:./packages/utilities",
      "@tailwindcss/vite": "^4.1.5",
      "@types/node": "^22.15.29",
      "tailwindcss": "^4.1.8",
      "vite": "npm:rolldown-vite@latest",
      "wrangler": "^4.18.0"
   },
   "dependencies": {
      "@hono/zod-validator": "^0.7.0",
      "hono": "^4.7.11",
      "retend": "^0.0.13",
      "retend-server": "^0.0.13",
      "retend-utils": "^0.0.13",
      "zod": "^3.25.46"
   }
}
