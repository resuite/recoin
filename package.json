      "@typescript/native-preview": "7.0.0-dev.20251001.1",
      "drizzle-kit": "^0.31.4",
      "husky": "^9.1.7",
      "lint-staged": "^16.1.0",
      "oxlint": "^1.5.0",
      "postcss": "^8.5.6",
      "postcss-nesting": "^13.0.2",
      "tailwindcss": "^4.1.8",
      "vite": "npm:rolldown-vite@^7.1.5",
      "vite-css-modules": "^1.10.0",
